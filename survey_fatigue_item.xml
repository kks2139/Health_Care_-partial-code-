<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/surveyQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color6fGray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/question"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/no"
            android:textColor="@color/colorb1Gray"
            android:textSize="9sp" />

        <RadioGroup
            android:id="@+id/radGroupSurvey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/num1"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:background="@drawable/fatigue_radio_btn1"
                android:button="@null"
                android:text="@string/num1"
                android:textSize="0sp"/>

            <RadioButton
                android:id="@+id/num2"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:background="@drawable/fatigue_radio_btn2"
                android:button="@null"
                android:text="@string/num2"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/num3"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:background="@drawable/fatigue_radio_btn3"
                android:button="@null"
                android:text="@string/num3"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/num4"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:background="@drawable/fatigue_radio_btn4"
                android:button="@null"
                android:text="@string/num4"
                android:textSize="0sp" />

            <RadioButton
                android:id="@+id/num5"
                android:layout_width="47dp"
                android:layout_height="49dp"
                android:background="@drawable/fatigue_radio_btn5"
                android:button="@null"
                android:text="@string/num5"
                android:textSize="0sp" />
        </RadioGroup>

        <TextView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/yes"
            android:textColor="@color/colorb1Gray"
            android:textSize="9sp" />
    </LinearLayout>

</LinearLayout>